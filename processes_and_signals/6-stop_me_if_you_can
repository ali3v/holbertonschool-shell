#!/usr/bin/env bash
# Stops the 4-to_infinity_and_beyond process and its group

pid=$(pgrep -f "4-to_infinity_and_beyond")
if [ -n "$pid" ]; then
    # Proses qrup ID tap
    pgid=$(ps -o pgid= -p "$pid" | tr -d ' ')
    # Bütün qrupu sonlandır (kill əmri olmadan)
    pkill -g "$pgid" 2>/dev/null
fi
