#!/usr/bin/env bash
# Creates PID file, displays infinite message, handles signals, and cleans up on termination

echo $$ > /var/run/myscript.pid

cleanup() {
    rm -f /var/run/myscript.pid
}

trap 'echo "I hate the kill command"; cleanup; exit 0' TERM
trap 'echo "Y U no love me?!"' INT
trap 'cleanup; exit 0' QUIT

while true; do
    echo "To infinity and beyond"
    sleep 1
done
